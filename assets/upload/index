<html>
<head>
	<title> Public Uploads</title> 
	<link rel="stylesheet" type="text/css" href="/shared/css/bootstrap.min.css" />
	<script type="text/javascript" src="/shared/js/angular.min.js"></script>
	<style type="text/css">
		.file{
			padding: 2%;
			font-family: sans-serif;
			text-decoration: none;
			font-size:1.5em;
		}
	</style>
</head>
<body ng-app="ngApp">
	<div class="container-fluid">
		<div class = "jumbotron">
			<p>
				This folder 8 <strong>~AppRoot/public/upload</strong> which can be accessed as <strong>http://{host}/upload/{filename.extention}</strong> is for storing files from users. <br>In case of same filename, older files will be over written.
			</p>
			<h3><a href="/admin/#/upload">Upload files</a></h3>
		</div>
		<div class="row" ng-controller="main">
			<div class="col-lg-12">
				<h3>Files currently present in this folder</h3>
			</div>
			<div class="col-lg-2 col-md-2 col-sm-6 col-xs-6 " ng-repeat="file in files">
				<a ng-href="./{{file}}" class="file">{{$index+1}}. <em>{{file}}</em></a>
			</div>
		</div>	
	</div>
	<script type="text/javascript">
	var app = angular.module("ngApp",[]);
	app.controller("main",["$scope","$http",function($scope,$http) {
		$scope.files = [] ;
		$http.get("/showFiles?folder=upload")
		.success(function(data){
			$scope.files = data ;
		})
	}])
	</script>	
</body>
</html>
